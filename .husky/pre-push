#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🧪 Running tests before push..."
npm run test:run

if [ $? -ne 0 ]; then
  echo "❌ Tests failed! Push aborted."
  exit 1
fi

echo "🔍 Running lint check..."
npm run lint

if [ $? -ne 0 ]; then
  echo "❌ Lint failed! Push aborted."
  exit 1
fi

echo "✅ All checks passed! Proceeding with push..." 